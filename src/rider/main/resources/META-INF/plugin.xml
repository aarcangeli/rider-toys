<idea-plugin require-restart="true">
  <id>com.github.aarcangeli.ridertools</id>
  <name>Rider-Tools</name>
  <version>_PLACEHOLDER_</version>
  <vendor email="alessandroarcangeli.rm@gmail.com" url="https://github.com/aarcangeli">Alessandro Arcangeli</vendor>
  <depends>com.intellij.modules.rider</depends>

  <!-- until-build not specified on purpose -->
  <idea-version since-build="221"/>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Fold access specifier sections (public:, private:, etc) in C++ classes -->
    <lang.foldingBuilder language="C++" implementationClass="com.github.aarcangeli.ridertools.CppFoldBuilder"/>

    <!-- TODO: remove this example component -->
    <applicationConfigurable groupId="language" id="RiderTools.TestOptionsPage"
                             instance="com.github.aarcangeli.ridertools.TestOptionsPage" parentId="tools"/>
  </extensions>

</idea-plugin>
